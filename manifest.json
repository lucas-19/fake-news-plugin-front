{
    "name": "Fake news Detect",
    "description": "Highlight over a text to detect if it is fake news or not. For greater accuracy, insert more context.",
    "version": "1.3.3",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },    
    "permissions": [
        "contextMenus",
        "scripting",
        "activeTab"
    ],
    "icons": {
        "16": "16.png"
    },
    "host_permissions": [
        "http://127.0.0.1:5000/"
    ]
    
}